<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PickerActivity">

    <Button
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年月日" />

    <Button
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月日" />

    <Button
        android:id="@+id/year_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年月日时间" />

    <Button
        android:id="@+id/year_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年月选择" />

    <Button
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间选择" />
    <Button
        android:id="@+id/onSinglePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单项选择"
        />
    <!--<Button
        android:id="@+id/onMultiplePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多项选择"
        />-->
    <Button
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多级联动（省、地、县）"
        />
    <Button
        android:id="@+id/city_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多级联动（地、县）"
        />
    <Button
        android:id="@+id/cityTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多级联动（省、地）"
        />
</LinearLayout>